<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_bottom_border">

    <include layout="@layout/layout_url_bar_full" />


    <Button
        android:id="@+id/scan_upc_standard"
        style="@style/AppIntroButtonStyleCompat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_bar"
        android:background="#C1AD0202"
        android:padding="@dimen/dp10"
        android:text="@string/scan_standard"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:text="@string/scan_standard" />

    <Button
        android:id="@+id/scan_upc_crypto"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_bar"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@id/scan_upc_standard"
        android:background="#C11A97EA"
        android:padding="@dimen/dp10"
        android:text="@string/scan_crypto"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:text="@string/scan_crypto" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/scan_upc_crypto"
        android:indeterminate="false"
        android:progressDrawable="@drawable/background_horizontal_progress" />

    <View
        android:id="@+id/anchor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/progressBar" />

    <RelativeLayout
        android:id="@+id/secondary_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/anchor"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/font_regular"
                android:gravity="center_vertical"
                android:text="0.0"
                android:textColor="@color/text_dark_gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/font_semibold"
                android:gravity="center_vertical"
                android:text="@string/eth"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp" />

        </LinearLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/secondary_toolbar"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <com.alphawallet.app.ui.widget.entity.DappBrowserSwipeLayout
            android:id="@+id/swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="522dp">

            <com.alphawallet.app.web3.Web3View
                android:id="@+id/web3view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </com.alphawallet.app.ui.widget.entity.DappBrowserSwipeLayout>

    </FrameLayout>
</RelativeLayout>